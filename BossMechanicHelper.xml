<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="BossMechanicHelperConfigFrame" parent="UIParent" hidden="true">
        <Size x="400" y="300"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                BossMechanicHelperConfigFrame_OnLoad(self)
            </OnLoad>
            <OnEvent>
                BossMechanicHelperConfigFrame_OnEvent(self, event, ...)
            </OnEvent>
        </Scripts>
    </Frame>

    <Button name="BossMechanicHelperButton" parent="Minimap" inherits="MiniMapTrackingButtonTemplate">
        <Scripts>
            <OnClick>
                SlashCmdList["BMH"]("")
            </OnClick>
        </Scripts>
    </Button>

    <!-- Delay dropdown creation until after Blizzard dropdown code is loaded -->
    <Frame name="BossMechanicHelperDropdownLoader" parent="UIParent" hidden="true">
        <Scripts>
            <OnLoad>
                if not UIDropDownMenu_Initialize then
                    UIParentLoadAddOn("Blizzard_UIDropDownMenu")
                end
                CreateFrame("Frame", "BossMechanicHelperDropdown", UIParent, "UIDropDownMenuTemplate")
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>
